@model UXComex.GerenciadorPedidos.Web.ViewModels.OrderDetailsViewModel

@{
    ViewData["Title"] = $"Order Details: #{Model.Id}";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Order Details</h2>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Order #@Model.Id</h4>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Client:</dt>
                        <dd class="col-sm-8">@Model.Client.Name</dd>

                        <dt class="col-sm-4">Order Date:</dt>
                        <dd class="col-sm-8">@Model.CreationDate.ToString("dd/MM/yyyy HH:mm")</dd>

                        <dt class="col-sm-4">Total Value:</dt>
                        <dd class="col-sm-8">@Model.TotalValue.ToString("C", System.Globalization.@CultureInfo.GetCultureInfo("pt-BR"))</dd>

                        <dt class="col-sm-4">Status:</dt>
                        <dd class="col-sm-8">@Model.Status</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-light">
            <h5 class="mb-0">Order Items</h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped table-hover mb-0">
                    <thead class="thead-dark">
                        <tr>
                            <th>Product Name</th>
                            <th>Description</th>
                            <th class="text-end">Price</th>
                            <th class="text-end">Quantity</th>
                            <th class="text-end">Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Items)
                        {
                            <tr>
                                <td>@item.ProductName</td>
                                <td>@item.ProductDescription</td>
                                <td class="text-end">@item.Price.ToString("C", System.Globalization.@CultureInfo.GetCultureInfo("pt-BR"))</td>
                                <td class="text-end">@item.Quantity</td>
                                <td class="text-end">@item.TotalPrice.ToString("C", System.Globalization.@CultureInfo.GetCultureInfo("pt-BR"))</td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="4" class="text-end fw-bold">Total Order Value:</td>
                            <td class="text-end fw-bold">@Model.TotalValue.ToString("C", System.Globalization.@CultureInfo.GetCultureInfo("pt-BR"))</td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</div>